@page
@model CrownGlobal.Areas.Admin.Pages.HowTos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>HowTo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HowTo.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HowTo.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HowTo.File)
        </dt>
        <dd class="col-sm-10">
            @if(Model.HowTo.File.EndsWith("png") || Model.HowTo.File.EndsWith("jpg") || Model.HowTo.File.EndsWith("jpeg") ){
                <img src="/@Model.HowTo.File">
            }else{
                <video src="/@Model.HowTo.File" controls="show"></video>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
